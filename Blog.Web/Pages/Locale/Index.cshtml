@page
@model Blog.Web.Pages.Locale.Index

<div class="max-w-[366px] sm:max-w-full w-5/6 sm:w-[692px] lg:w-[980px] mx-auto mt-10">
    <h1 class="text-xl font-medium">This site in other language</h1>
    <div class="border-t border-gray-300 w-full mt-3"></div>

    @foreach (var lan in Model.SupportLanguages)
    {
        <div class="text-blue-500 my-5">
            <a class="hover:underline" asp-page="/Index" asp-route-culture="@lan.Name">@lan.NativeName (@lan.EnglishName)</a>
        </div>
    }
</div>