@using Blog.Web.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Blog.Domain.Models.DomainDto
@inject CommonLocalizationService CommonLocalization

<nav class="sticky top-0 z-10 bg-white backdrop-filter backdrop-blur-lg bg-opacity-30">
    <div class="max-w-5xl mx-auto px-4">
        <div class="flex items-center justify-between h-12">
            <a asp-route-culture="@Context.Request.RouteValues["culture"]" asp-page="/Index" class="block text-xl text-gray-900 font-medium">@Model.Name</a>
            <div class="flex gap-8 text-gray-900 text-xs">
                <button type="button" class="flex items-center justify-between gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd"/>
                    </svg>
                    @CommonLocalization.GetWith("站内搜索", Model.Name)
                </button>
                <button type="button" class="flex items-center justify-between gap-1">
                    @CommonLocalization.Get("热门话题")
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</nav>