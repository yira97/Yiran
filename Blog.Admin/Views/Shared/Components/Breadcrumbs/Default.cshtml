@model BreadcrumbsViewModel

@{
    var levels = Model.Breadcrumbs.Links.ToList();
}

<nav class="flex h-8" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4">
        @for (var i = 0; i < levels.Count; i++)
        {
            var level = levels[i];
            <li>
                <div class="flex items-center">
                    @if (i > 0)
                    {
                        <svg class="h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
                        </svg>
                        <span class="w-4"></span>
                    }
                    @if (levels.Count - 1 == i)
                    {
                        <span class="text-sm text-gray-500 hover:text-gray-700">@level.Name</span>
                    }
                    else
                    {
                        <a href="@level.Href" class="text-sm font-medium text-gray-500 hover:text-gray-700">@level.Name</a>
                    }
                </div>
            </li>
        }
    </ol>
</nav>