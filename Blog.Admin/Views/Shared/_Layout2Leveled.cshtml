@{
    Layout = "_Layout2";
    var levels = ViewData["Levels"] != null ? (IList<string>)ViewData["Levels"]! : new List<string>();
    var activeLevel = levels.Count > 0 ? levels.Count - 1 : 0;
    var levelLinks = ViewData["LevelLinks"] != null ? (IList<string>)ViewData["LevelLinks"]! : new List<string>();
    string LevelLink(int index) => levelLinks[index] ?? "#";
}

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
    <nav class="flex h-8" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
            <li>
                <div>
                    <a asp-controller="Home" asp-action="Index" class="text-gray-400 hover:text-gray-500">
                        <svg class="h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd"/>
                        </svg>
                        <span class="sr-only">Home</span>
                    </a>
                </div>
            </li>
            @for (var i = 0; i < levels.Count; i++)
            {
                <li>
                    <div class="flex items-center">
                        <svg class="h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
                        </svg>
                        @if (activeLevel == i)
                        {
                            <span class="ml-4 text-sm text-gray-500 hover:text-gray-700">@levels[i]</span>
                        }
                        else
                        {
                            <a href="@(LevelLink(i))" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">@levels[i]</a>
                        }
                    </div>
                </li>
            }
        </ol>
    </nav>

    @RenderBody()
</div>

@await RenderSectionAsync("Scripts", required: false)