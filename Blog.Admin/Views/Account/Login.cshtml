@{
    Layout = "_AuthenticationLayout";
    ViewData["Title"] = "Sign in";
    ViewData["Sibling"] = "Register";
    ViewData["SiblingLink"] = Url.Action("Register");
}
@model LoginViewModel

<form class="space-y-6" method="POST">

    <div>
        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
        <div class="relative mt-1 rounded-md shadow-sm">
            @if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"]!.Errors.Any())
            {
                <input id="email" type="email" asp-for="Email" autocomplete="email" required class="block w-full rounded-md border-red-300 pr-10 text-red-900 placeholder-red-300 focus:border-red-500 focus:outline-none focus:ring-red-500 sm:text-sm" placeholder="you@example.com" value="adamwathan" aria-invalid="true" aria-describedby="email-error">
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                    <!-- Heroicon name: mini/exclamation-circle -->
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                    </svg>
                </div>
            }
            else
            {
                <input id="email" type="email" asp-for="Email" autocomplete="email" required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
            }
        </div>
        <span asp-validation-for="Email" class="mt-2 text-sm text-red-600" id="email-error"></span>
    </div>

    <div>
        <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
        <div class="relative mt-1 rounded-md shadow-sm">
            @if (ViewData.ModelState["Password"] != null && ViewData.ModelState["Password"]!.Errors.Any())
            {
                <input id="password" type="password" asp-for="Password" autocomplete="new-password" required class="block w-full rounded-md border-red-300 pr-10 text-red-900 placeholder-red-300 focus:border-red-500 focus:outline-none focus:ring-red-500 sm:text-sm" placeholder="you@example.com" value="adamwathan" aria-invalid="true" aria-describedby="email-error">
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                    <!-- Heroicon name: mini/exclamation-circle -->
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                    </svg>
                </div>
            }
            else
            {
                <input id="password" type="password" asp-for="Password" autocomplete="new-password" required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
            }
        </div>
        <span asp-validation-for="Password" class="mt-2 text-sm text-red-600" id="password-error"></span>
    </div>

    <div class="flex items-center justify-between">
        <div class="flex items-center">

        </div>

        <div class="text-sm">
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
        </div>
    </div>

    <div>
        <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Sign in</button>
    </div>
</form>